pipeline{
    
    agent any
    
    stages{
        
        stage('Build'){
            steps{
                echo 'Build Stage'
                sh 'sleep 10s'
            }
        }
        stage('Integration Testing'){
            parallel{
                stage('Sanity Suit'){
                    steps{
                        echo 'Ruuning Sanity Suit'
                        sleep '10s'
                    }
                }
                stage('Regression Suit'){
                    steps{
                        echo 'Ruuning Regression Suit'
                        sleep '10s'
                    }
                }
                stage('Performance Suit'){
                    steps{
                        echo 'Ruuning Performance Suit'
                        sleep '10s'
                    }
                }
            }
        }
        stage('Deploy'){
            steps{
                echo 'Deploy Stage'
            }
        }
    }
    
}
